    <script type="text/javascript">
        $(document).ready(function () {
            // auto-scrolls to request element
            if ($('#request-block-' + '{{{requestId}}}').length) {
                $("#collapse-" + '{{{requestId}}}').collapse("show");
                $('html, body').animate(
                    {
                        scrollTop: $('#request-block-' + '{{{requestId}}}').offset().top
                    },
                    800
                );
            }
        });
    </script>

